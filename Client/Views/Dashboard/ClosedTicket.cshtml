    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script>
        $(document).ready(function LoadTable() {
            table = $('#closedTicketDatatable').DataTable({
                ajax: {
                    url: "/Dashboard/GetClosedTicket",
                    type: "GET",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    dataSrc: ""
                },
                columns: [
                    { "data": "ticketID" },
                    { "data": "ticketName" },
                    //{ "data": "Category"},
                    { "data": "requestorName" },
                    {
                        "data": "ticketDate",
                        render: function (data, type, row) {
                            let date = moment(row.ticketDate).format('DD MMMM YYYY HH:mm:ss')
                            return date
                        }
                    },
                    { "data": "ticketStatus" },
                    {
                        "data": "statusDate",
                        render: function (data, type, row) {
                            let dates = moment(row.statusDate).format('DD MMMM YYYY HH:mm:ss')
                            return dates
                        }
                    }
                ]
                //"order": [[1, 'asc']]
            })
