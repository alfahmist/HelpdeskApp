<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css" integrity="sha512-mxrUXSjrxl8vm5GwafxcqTrEwO1/oBNU25l20GODsysHReZo4uhVISzAKzaABH6/tTfAxZrY2FprmeAP5UZY8A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Datatable -->
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">

    <style>
        a {
            cursor: pointer;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">

            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">
                        Log out
                        <i class="fas fa-sign-out-alt ml-2"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-area="" asp-controller="Dashboard" asp-action="Index" class="brand-link pl-3">
                <span class="brand-text font-weight-light">@ViewData["name"]</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">
                        <a href="#" class="d-block">@ViewData["name"]</a>
                        <a href="#" class="d-block">@ViewData["empId"]</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="#" class="nav-link active">
                                <i class="fas fa-home"></i>
                                <p>Home</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-home"></i>
                                <p>View Ticket</p>
                            </a>
                        </li>
                        <li class="nav-item" onclick="ModalFlow('newTicketSolution')" data-toggle="modal" data-target="#modalTicketSolution">
                            <a class="nav-link">
                                <i class="fas fa-plus"></i>
                                <p>New Ticket Solution</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <div class="content-wrapper">

            <section class="content">
                <!-- /.content-header -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-3 col-6">
                            <!-- small box -->
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3 id="allCount"></h3>
                                   
                                    <p>All Ticket</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-bag"></i>
                                </div>
                                <a class="small-box-footer" asp-area="" asp-controller="Dashboard" asp-action="Index">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-3 col-6">
                            <!-- small box -->
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3 id="openCount"></h3>

                                    <p>Open</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-stats-bars"></i>
                                </div>
                                <a class="small-box-footer" asp-area="" asp-controller="Dashboard" asp-action="OpenedTicket">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-3 col-6">
                            <!-- small box -->
                            <div class="small-box bg-warning">
                                <div class="inner">
                                    <h3 id="inProgressCount"></h3>

                                    <p>In Progress</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-person-add"></i>
                                </div>
                                <a class="small-box-footer" asp-area="" asp-controller="Dashboard" asp-action="InProgressTicket">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-3 col-6">
                            <!-- small box -->
                            <div class="small-box bg-danger">
                                <div class="inner">
                                    <h3 id="closeCount"></h3>

                                    <p>Closed</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-pie-graph"></i>
                                </div>
                                <a class="small-box-footer" asp-area="" asp-controller="Dashboard" asp-action="ClosedTicket">More info <i class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                        <!-- ./col -->
                    </div>
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Modal Add Solution -->
        <div class="modal fade" id="modalTicketSolution" tabindex="-1" role="dialog" aria-labelledby="modalTicketSolution" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">New Ticket</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form class="needs-validation modal-validation" novalidate>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-12">

                                    <div class="card-body">
                                        <div class="form-row mb-3">
                                            <label for="TicketId">Ticket ID</label>
                                            <input type="text" class="form-control" id="TicketId" aria-describedby="emailHelp" placeholder="Ticket ID" required>
                                            <div class="invalid-feedback col-sm-9 offset-3">
                                                please input valid name for your ticket
                                            </div>
                                            <div class="valid-feedback col-sm-9 offset-3">
                                                Looks good!
                                            </div>
                                        </div>

                                        <div class="form-row mb-3">
                                            <label for="EmployeeId">Employee ID</label>
                                            <input type="text" class="form-control" id="EmployeeId" aria-describedby="emailHelp" placeholder="Client ID" value="@ViewData["empId"]" disabled>
                                            <div class="invalid-feedback col-sm-9 offset-3">
                                                please input valid ID
                                            </div>
                                            <div class="valid-feedback col-sm-9 offset-3">
                                                Looks good!
                                            </div>
                                        </div>

                                        <div class="form-row mb-3">
                                            <label for="Solution">Solution</label>
                                            <textarea class="form-control" id="Solution" rows="3" required></textarea>
                                            <div class="invalid-feedback col-sm-9 offset-3">
                                                Please Make your Best solution for them
                                            </div>
                                            <div class="valid-feedback col-sm-9 offset-3">
                                                Looks good!
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" id="btnSolution">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <footer class="main-footer">
        <strong>Copyright &copy; June 2021 <a href="https://adminlte.io">Ticketing Support Helpdesk.net</a>.</strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block">
            <b>Version</b> 1.0.0
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/modal.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(document).ready(function () {
            var allTicketCount;
            var openTicketCount;
            var inProgressTicketCount;
            var closeTicketCount;

            //all
            $.ajax({
                url: "/Dashboard/AllNewTicketStatus",
                type: "GET",
                dataSrc: ""
            }).done((result) => {
                allTicketCount = result.length;
                if (allTicketCount > 0) {
                    $("#allCount").text(allTicketCount)
                } else {
                    $("#allCount").text(0)
                }
            }).fail((error) => {
                //failed
                console.log("request gagal");
            });

            //open
            $.ajax({
                url: "/Dashboard/GetOpenedTicket",
                type: "GET",
                dataSrc: ""
            }).done((result) => {
                openTicketCount = result.length;
                if (openTicketCount > 0) {
                    $("#openCount").text(openTicketCount)
                } else {
                    $("#openCount").text(0)
                }
            }).fail((error) => {
                //failed
                console.log("request gagal");
            });

            //in progress
            $.ajax({
                url: "/Dashboard/GetInprogressTicket",
                type: "GET",
                dataSrc: ""
            }).done((result) => {
                inProgressTicketCount = result.length;
                if (inProgressTicketCount > 0) {
                    $("#inProgressCount").text(inProgressTicketCount)
                } else {
                    $("#inProgressCount").text(0)
                }
            }).fail((error) => {
                //failed
                console.log("request gagal");
            });



            //close
            $.ajax({
                url: `/Dashboard/GetClosedTicket`,
                type: "GET",
            }).done((result) => {
                closeTicketCount = result.length;
                if (closeTicketCount > 0) {
                    $("#closeCount").text(closeTicketCount)
                } else {
                    $("#closeCount").text(0)
                }
            }).fail((error) => {
                //failed
                console.log("request gagal");
            });

        });

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
