@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detail";
    var clientId = @ViewData["empId"] as string;
}
<div class="form-row my-3">
    <div class="col-sm-3">
        <div class="card">
            <div class="card-header">
