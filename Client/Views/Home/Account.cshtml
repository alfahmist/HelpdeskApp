@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Account";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Account</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <strong><i class="fas fa-book mr-1"></i>Name </strong>

        <p class="text-muted">
            <span id="name"></span>
        </p>

        <hr>

        <strong><i class="fas fa-map-marker-alt mr-1"></i> Birthdate</strong>

        <p class="text-muted">
            <span id="date"></span>
        </p>

        <hr>

        <strong><i class="fas fa-pencil-alt mr-1"></i> Email</strong>

        <p class="text-muted">
            <span id="email"></span>
        </p>

        <hr>

        <strong><i class="far fa-file-alt mr-1"></i> Phone</strong>

        <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>
    </div>
    <!-- /.card-body -->
</div>

<button class="btn btn-outline-info">Edit Account</button>
<!-- /.card -->

@section Scripts {

    <script>
        var clientID = `@ViewData["empId"]`;
        $(document).ready(function () {
            ReadById(clientID);
        });
        let ReadById = (Id) => {
            $.ajax({
                url: `Home/GetEmployeeById`,
                type: "GET",
                data: {"Id" : Id}
            }).done((result) => {
                data = JSON.parse(result);
                $("#name").text(data.name);
                $("#date").text(data.birthDate);
                $("#email").text(data.email);
                console.log(result);
            }).fail((error) => {
                //failed
                alert("request gagal");
            });
        }
    </script>
}