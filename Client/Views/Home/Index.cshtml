@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
    @ViewData["empId"];
}
<div class="form-row mb-3">
    <label for="empId">Ticket Name</label>
    <input type="hidden" class="form-control" id="empId" aria-describedby="emailHelp" placeholder="empId">
</div>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">New Ticket</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="needs-validation modal-validation" novalidate>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="card-body">
                                <div class="form-row mb-3">
                                    <label for="ticketName">Ticket Name</label>
                                    <input type="text" class="form-control" id="ticketName" aria-describedby="emailHelp" placeholder="Ticket Name" required>
                                    <div class="invalid-feedback col-sm-9 offset-3">
                                        please input valid name for your ticket
                                    </div>
                                    <div class="valid-feedback col-sm-9 offset-3">
                                        Looks good!
                                    </div>
                                </div>

                                <div class="form-row mb-3">
                                    <label for="clientId">Client ID</label>
                                    <input type="text" class="form-control" id="clientId" aria-describedby="emailHelp" placeholder="Client ID" value='@ViewData["empId"]' required disabled>
                                    <div class="invalid-feedback col-sm-9 offset-3">
                                        please input valid ID
                                    </div>
                                    <div class="valid-feedback col-sm-9 offset-3">
                                        Looks good!
                                    </div>
                                </div>


                                <div class="form-row mb-3">
                                    <label for="CategoriesId">Category</label>
                                    @*<select class="form-control" id="exampleFormControlSelect1" required>
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                        </select>*@
                                    <input type="text" class="form-control" id="CategoriesId" aria-describedby="emailHelp" placeholder="Enter Category From Number 1 to 3" required>
                                    <div class="invalid-feedback col-sm-9 offset-3">
                                        Please provide categories correctly.
                                    </div>
                                    <div class="valid-feedback col-sm-9 offset-3">
                                        Looks good!
                                    </div>
                                </div>

                                <div class="form-row mb-3">
                                    <label for="Subject">Subject</label>
                                    <input type="text" class="form-control" id="Subject" aria-describedby="emailHelp" placeholder="Subject" required>
                                    <div class="invalid-feedback col-sm-9 offset-3">
                                        please input valid subject
                                    </div>
                                    <div class="valid-feedback col-sm-9 offset-3">
                                        Looks good!
                                    </div>
                                </div>



                                <div class="form-row mb-3">
                                    <label for="Message">Message</label>
                                    <textarea class="form-control" id="Message" rows="3" required></textarea>
                                    <div class="invalid-feedback col-sm-9 offset-3">
                                        password less then 6
                                    </div>
                                    <div class="valid-feedback col-sm-9 offset-3">
                                        Looks good!
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="buttonModal">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="modalTicketSolution" tabindex="-1" role="dialog" aria-labelledby="modalTicketSolution" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">New Ticket</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="needs-validation modal-validation" novalidate>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="card-body">
                                <div class="form-row mb-3">
                                    <label for="TicketId">Ticket ID</label>
                                    <input type="text" class="form-control" id="TicketId" aria-describedby="emailHelp" placeholder="Ticket Name" required>
                                    <div class="invalid-feedback col-sm-9 offset-3">
                                        please input valid name for your ticket
                                    </div>
                                    <div class="valid-feedback col-sm-9 offset-3">
                                        Looks good!
                                    </div>
                                </div>

                                <div class="form-row mb-3">
                                    <label for="EmployeeId">Employee ID</label>
                                    <input type="text" class="form-control" id="EmployeeId" aria-describedby="emailHelp" placeholder="Client ID" required>
                                    <div class="invalid-feedback col-sm-9 offset-3">
                                        please input valid ID
                                    </div>
                                    <div class="valid-feedback col-sm-9 offset-3">
                                        Looks good!
                                    </div>
                                </div>

                                <div class="form-row mb-3">
                                    <label for="Solution">Solution</label>
                                    <textarea class="form-control" id="Solution" rows="3" required></textarea>
                                    <div class="invalid-feedback col-sm-9 offset-3">
                                        Please Make your Best solution for them
                                    </div>
                                    <div class="valid-feedback col-sm-9 offset-3">
                                        Looks good!
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="btnSolution">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

